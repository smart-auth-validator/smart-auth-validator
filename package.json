{
  "name": "smart-auth-validator",
  "version": "1.3.3",
  "description": "Zero-regex, type-safe authentication and form validation for Fastify and Express",
  "author": "Muhammad Burhan Chughtai",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "vitest run",
    "lint": "eslint src --max-warnings=0",
    "build": "tsup",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "peerDependencies": {
    "express": "^5.2.1",
    "fastify": "^5.7.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "ajv": "^8.18.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smart-auth-validator/smart-auth-validator"
  },
  "bugs": {
    "url": "https://github.com/smart-auth-validator/smart-auth-validator/issues"
  },
  "homepage": "https://github.com/smart-auth-validator/smart-auth-validator",
  "keywords": [
    "auth",
    "validation",
    "typescript",
    "type-safe",
    "zero-regex",
    "form",
    "validator",
    "authentication",
    "middleware",
    "fastify",
    "express",
    "form-validation",
    "backend"
  ]
}
