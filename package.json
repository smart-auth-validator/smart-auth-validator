{
  "name": "smart-auth-validator",
  "version": "1.0.0",
  "description": "Zero-regex, type-safe authentication and form validation for Fastify, Express, and NestJS",
  "author": "Muhammad Burhan Chughtai",
  "license": "ISC",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint src --max-warnings=0",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "peerDependencies": {
    "express": "^4.22.1",
    "fastify": "^4 || ^5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chughtaiburhan/smart-auth-validator.git"
  },
  "bugs": {
    "url": "https://github.com/chughtaiburhan/smart-auth-validator/issues"
  },
  "homepage": "https://github.com/chughtaiburhan",
  "keywords": [
    "auth",
    "validation",
    "typescript",
    "type-safe",
    "zero-regex",
    "form",
    "validator",
    "authentication",
    "middleware",
    "fastify",
    "express",
    "nestjs",
    "form-validation",
    "backend"
  ]
}
